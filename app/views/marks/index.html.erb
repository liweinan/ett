<% if params[:product_id].blank? %>
    <h2>Listing marks</h2>
<% else %>
    <h2>Listing marks of <%= params[:product_id] %></h2>
<% end %>

<div class='manage-tbl'>
  <table style="width:300px;">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>-</th>
    </tr>

    <% @marks.each do |mark| %>
        <tr>
          <td><%= h mark.id %></td>
          <td><%= h mark.key %></td>
          <td><%= h mark.value %></td>
          <td>
            <% if can_manage? %>
                <%= link_to 'Edit', edit_mark_path(mark) %>
            <% end %>
          </td>
        </tr>
    <% end %>
  </table>
</div>

<br/>
<% if params[:product_id].blank? %>
    <%= link_to 'New mark', :controller => :marks, :action => :new, :product_id => params[:product_id] %>
<% else %>
    <%= link_to "New mark of #{unescape_url(params[:product_id])}", :controller => :marks, :action => :new, :product_id => params[:product_id] %>
    <%= render :partial => 'layouts/sep_tiny' %>
    <%= link_to "Back to #{unescape_url(params[:product_id])}", :controller => :packages, :action => :index, :product_id => escape_url(params[:product_id]) %>

<% end %>
