<% @package ||= nil %>
<% product_id ||= nil %>
<% package ||= @package %>
<% sep ||= '/' %>
<%
   @product = nil
   if !product_id.blank?
     @product = Product.find_by_name(unescape_url(product_id))
   elsif !package.blank?
     @product = package.product
   end
%>

<% @product.marks.each do |mark| %>
    <% if package.blank? %>
        <label><%= mark.key %> - <%= check_box_tag("marks[]", mark.key, false) %></label> <%= sep %>
    <% else %>
        <% assignment = Assignment.find_by_package_id_and_mark_id(package.id, mark.id) %>
        <label><%= mark.key %> - <%= check_box_tag("marks[]", mark.key, assignment != nil) %></label> <%= sep %>
    <% end %>
<% end %>

<%=hidden_field_tag :process_marks, 'Yes'%>