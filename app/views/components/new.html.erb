<h1>New component</h1>

<% if Rails::VERSION::STRING < "4" %>
  <% form_for(@component) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </p>
      <p>
          <%= render :partial => 'components/fields/tasks' %>
      </p>
      <p>
        <%= f.submit 'Create' %>
      </p>
  <% end %>
<% else %>
  <%= form_for(@component) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </p>
      <p>
          <%= render :partial => 'components/fields/tasks' %>
      </p>
      <p>
        <%= f.submit 'Create' %>
      </p>
  <% end %>
<% end %>

