<h3>Create a new bug in Bugzilla</h3>

<div class='manage-tbl'>
  <table>
    <tr>
      <td style="text-align: right">
        Bugzilla account
      </td>
      <td style="text-align: left">
        <input id="nbb_user" value="<%=current_user.email%>"/>
      </td>
    </tr>
    <tr>
      <td style="text-align: right">
        Bugzilla account password
      </td>
      <td style="text-align: left">
        <input id="nbb_pwd" value="<%=session[:bz_pass]%>" type="password"/>
      </td>
    </tr>
    <tr>
      <td style="text-align: right">
        Release (target_release)
      </td>
      <td style="text-align: left">
        <input id="nbb_rel" value="<%=@package.brew_tag.target_release%>"/>
      </td>
    </tr>
    <tr>
      <td style="text-align: right">Tag Version (candidate_tag)</td>
      <td style="text-align: left">
        <input id="nbb_tver" value="<%=@package.brew_tag.candidate_tag%>"/>
      </td>
    </tr>
    <tr>
      <td style="text-align: right">
        Package Version (ver)
      </td>
      <td style="text-align: left">
        <input id="nbb_ver" value="<%=@package.ver%>"/>
      </td>
    </tr>
    <!--<tr>-->
      <!--<td style="text-align: right">-->
        <!--Summary-->
      <!--</td>-->
      <!--<td style="text-align: left">-->
        <!--<input id="nbb_sum"/>-->
      <!--</td>-->
    <!--</tr>-->
    <tr>
      <td colspan="2" style="text-align: right">
        <%= render :partial => 'layouts/progress_indicator', :locals => {:progress_indicator_id => 'create_bz_bug_indicator', :msg => "Be patient"} %>
        <button onclick="createBzBug()">
          Create
        </button>
        <button onclick="hideNewBzBugForm()">
          Cancel
        </button>
      </td>
    </tr>
  </table>
</div>

<%= render :partial => "layouts/sep" %>