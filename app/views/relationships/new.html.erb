<h1>New relationship</h1>

<% form_for(@relationship) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :is_global %><br/>
      <%= f.text_field :is_global %>
    </p>
    <p>
      <%= f.label :task_id %><br/>
      <%= f.text_field :task_id %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back', relationships_path %>