<% disabled ||= false %>
<% statuses = Status.find_all_can_select_only_in_global_scope %>
<table border=1>
  <tr>
    <td>
      Start Status:
    </td>
    <td>

      <% wkflow_start_statuses = @workflow.start_status_workflows.map {|wkf| wkf.status} %>
      <% statuses.each do |status| %>
          <% col_id = "start_status_#{status.id}" %>
          <input type="checkbox" name='start_statuses_id[]' id='<%= col_id %>' value="<%= status.id %>"
                 <% if wkflow_start_statuses.include? status %>
                 checked
                 <% end %>
                 <% if disabled %>
                 disabled
                 <% end %>
                 />
          <label for="<%= col_id %>"><%= status.name %></label>
      <% end %>
    </td>
  </tr>
</table>
