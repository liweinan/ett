<h1>New setting</h1>
<% if Rails::VERSION::STRING < "4" %>
  <% form_for(@setting) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :recipients %><br/>
        <%= f.text_area :recipients %>
      </p>
      <p>
        <%= f.label :props %><br/>
        <%= f.text_field :props %>
      </p>
      <%= render :partial => 'settings/fields/xattrs', :locals => {:f => f, :disabled => true} %>
      <%= render :partial => 'layouts/sep' %>

      <%= render :partial => 'settings/fields/enable_xattrs', :locals => {:f => f} %>
      <%= render :partial => 'layouts/sep' %>

      <%= render :partial => 'settings/fields/show_xattrs', :locals => {:f => f} %>
      <%= render :partial => 'layouts/sep' %>

      <p>
        <%= f.submit 'Create' %>
      </p>
  <% end %>
<% else %>
  <%= form_for(@setting) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :recipients %><br/>
        <%= f.text_area :recipients %>
      </p>
      <p>
        <%= f.label :props %><br/>
        <%= f.text_field :props %>
      </p>
      <%= render :partial => 'settings/fields/xattrs', :locals => {:f => f, :disabled => true} %>
      <%= render :partial => 'layouts/sep' %>

      <%= render :partial => 'settings/fields/enable_xattrs', :locals => {:f => f} %>
      <%= render :partial => 'layouts/sep' %>

      <%= render :partial => 'settings/fields/show_xattrs', :locals => {:f => f} %>
      <%= render :partial => 'layouts/sep' %>

      <p>
        <%= f.submit 'Create' %>
      </p>
  <% end %>
<% end %>

<%= link_to 'Back', settings_path %>