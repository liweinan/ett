<% if @setting.product.blank? %>
    <h1>System Settings</h1>
<% else %>
    <h1>Settings of <%= @setting.product.name %></h1>
<% end %>
<%= render :partial => 'layouts/sep' %>
<% form_for(@setting) do |f| %>
    <%= render :partial => 'settings/fields/enabled', :locals => {:f => f, :disabled => true} %>
    <%= render :partial => 'layouts/sep' %>

    <% if @setting.is_system_setting? %>
        <%= render :partial => 'settings/fields/default_tag', :locals => {:f => f, :disabled => true} %>
        <%= render :partial => 'layouts/sep' %>
    <% end %>


    <h2>
      Send email notifications to:
    </h2>
    <%= render :partial => 'settings/fields/props', :locals => {:f => f, :disabled => true} %>
    <%= render :partial => 'settings/fields/recipients', :locals => {:f => f, :disabled => true} %>
    <h2>
      When:
    </h2>
    <%= render :partial => 'settings/fields/actions', :locals => {:f => f, :disabled => true} %>
    <%= render :partial => 'layouts/sep' %>

    <%= render :partial => 'settings/fields/xattrs', :locals => {:f => f, :disabled => true} %>
    <%= render :partial => 'layouts/sep' %>

    <%= render :partial => 'settings/fields/enable_xattrs', :locals => {:f => f, :disabled => true} %>
    <%= render :partial => 'layouts/sep' %>

    <%= render :partial => 'settings/fields/show_xattrs', :locals => {:f => f, :disabled => true} %>
    <%= render :partial => 'layouts/sep' %>
<% end %>

<% if can_manage? %>
    <%= link_to 'Edit', :controller => :settings, :action => :edit, :id => @setting.id %>
<% end %>