<div class='manage-tbl'>
  <table>
    <tr>
      <td>Name</td>
      <td><%= h @label.name %></td>
    </tr>
    <tr>
      <td>Can Select</td>
      <td><%= @label.can_select %></td>
    </tr>
    <tr>
      <td>Can Show</td>
      <td><%= @label.can_show %></td>
    </tr>
    <tr>
      <td>Is Finish State</td>
      <td><%= @label.is_finish_state %></td>
    </tr>
    <tr>
      <td>CSS Style</td>
      <td style="<%= @label.style %>">Example</td>
    </tr>
    <% unless is_global?(@label) %>
        <tr>
          <td>Tag</td>
          <td>
            <%= h @label.product.name %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
<%= render :partial => 'layouts/sep' %>
<%= link_to 'Edit', :controller => :labels, :action => :edit, :id => @label.name, :product_id => params[:product_id] %> |
<%= link_to 'Back', :controller => :labels, :action => :index, :product_id => params[:product_id] %>