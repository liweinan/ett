<% if params[:product_id].blank? %>
    <h2>New system internal label</h2>
<% else %>
    <h2>New label of <%= params[:product_id] %></h2>
<% end %>

<div class='manage-tbl'>
  <% form_for(@label) do |f| %>
      <%= f.error_messages %>
      <table>
        <% if params[:product_id].blank? %>
            <%= render :partial => 'labels/fields/global', :locals => {:f => f} %>
        <% end %>
        <%= render :partial => 'labels/fields/name', :locals => {:f => f} %>
        <%= render :partial => 'labels/fields/style', :locals => {:f => f} %>
        <% unless params[:product_id].blank? %>
            <%= render :partial => 'labels/fields/product', :locals => {:f => f} %>
        <% end %>
        <%= render :partial => 'labels/fields/can_show', :locals => {:f => f} %>
        <%= render :partial => 'labels/fields/can_select', :locals => {:f => f} %>

        <tr>
          <td colspan=2 style='text-align:right;'><%= f.submit 'Create' %></td>
        </tr>
      </table>
  <% end %>
</div>
