<div class='manage-tbl'>
  <table id='bz_list_tbl'>
    <tr>
      <% if logged_in? %>
          <th class='content-list-head'>Operation</th>
      <% end %>
      <th class='content-list-head'>Bug ID</th>
      <th class='content-list-head'>Linked/Created By</th>
      <th class='content-list-head'>Last Synced At</th>
      <th class='content-list-head'>Status</th>
      <th class='content-list-head'>Summary</th>
    </tr>
    <% package.bz_bugs.each do |bz_bug| %>
        <tr id='bz_list_row_<%= bz_bug.id %>'>
          <% if logged_in? %>
              <td id="col_bz_ops_<%= bz_bug.id %>" class="small_font">
                <%= render :partial => 'bz_bugs/ops', :locals => {:bz_bug => bz_bug} %>
              </td>
          <% end %>
          <td id="col_bz_id_<%= bz_bug.id %>" class="small_font">
            <%= render :partial => "bz_bugs/bz_id", :locals => {:bz_bug => bz_bug} %>
          </td>
          <td id="col_bz_creator_<%= bz_bug.id %>" class="small_font">
            <%= render :partial => "bz_bugs/creator", :locals => {:bz_bug => bz_bug} %>
          </td>
          <td id="col_bz_last_synced_at_<%= bz_bug.id %>" class="small_font">
            <%= render :partial => "bz_bugs/last_synced_at", :locals => {:bz_bug => bz_bug} %>
          </td>
          <td id="col_bz_status_<%= bz_bug.id %>" class="small_font">
            <%= render :partial => "bz_bugs/bz_status", :locals => {:bz_bug => bz_bug} %>
          </td>
          <td id="col_bz_summary_<%= bz_bug.id %>" class="small_font">
            <%= render :partial => "bz_bugs/summary", :locals => {:bz_bug => bz_bug} %>
          </td>
          <td id="col_bz_action_<%= bz_bug.id %>:<%= bz_bug.bz_action %>" class="small_font" style="display: none">
          </td>
        </tr>
    <% end %>
  </table>
</div>
