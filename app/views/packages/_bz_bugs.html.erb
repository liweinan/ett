<%= render :partial => 'layouts/line' %>
<%= render :partial => 'layouts/sep' %>
<h3>Related Bugs</h3>

<% if logged_in? && !@package.task.readonly? %>
    <form onsubmit="return false;">
      <button onclick="renderBzBugForm('link_bz_bug');">
        Link to an existing bug
      </button>
      <%= render :partial => 'layouts/progress_indicator',
                 :locals => {:progress_indicator_id => 'link_bz_bug_form_div_indicator'} %>
      or
      <button onclick="renderBzBugForm('new_bz_bug');">Create a new bug</button>
      <%= render :partial => 'layouts/progress_indicator',
                 :locals => {:progress_indicator_id => 'new_bz_bug_form_div_indicator'} %>
      in Bugzilla
      <%= render :partial => 'layouts/sep' %>
    </form>
<% end %>
<div id="link_bz_bug_form_div" style="display:none;"></div>
<div id="new_bz_bug_form_div" style="display:none;"></div>
<%= render :partial => 'packages/bz_bug_list',
           :locals => {:package => package} %>
<% if logged_in? && !@package.task.readonly? %>
    <%= render :partial => 'layouts/sep' %>
    <form onsubmit="return false;">
      <button onclick="renderBzBugForm('sync_bz_bug');">
        Sync bug information
      </button>
      <%= render :partial => 'layouts/progress_indicator',
                 :locals => {:progress_indicator_id => 'sync_bz_bug_form_div_indicator'} %>
      <%= render :partial => 'layouts/progress_indicator',
                 :locals => {:progress_indicator_id => 'update_bz_bugs_indicator'} %>
    </form>

    <div id="sync_bz_bug_form_div" style="display:none;"></div>
    <%= render :partial => 'layouts/sep' %>
    <%= render :partial => 'layouts/line' %>
    <%= render :partial => 'layouts/sep_tiny' %>
<% end %>
<% content_for :js do %>
    <%= render :partial => 'packages/bz_bug_link_js',
               :locals => {:package => package} %>
    <%= render :partial => 'packages/time_tracking_js' %>
<% end %>

<% content_for :css do %>
    <style type="text/css">
        .small_font {
            font-size: 10px;
        }
    </style>
<% end %>
