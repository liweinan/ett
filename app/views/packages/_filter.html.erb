<% if logged_in? %>
    <% if params[:user] %>
        <%= link_to 'All Packages',
                    :controller => :packages,
                    :action => :index,
                    :task_id => params[:task_id] %>
    <% else %>
        <%= link_to 'My Packages',
                    :controller => :packages,
                    :action => :index,
                    :task_id => params[:task_id],
                    :user => session[:current_user].email %>
    <% end %>
<% end %>