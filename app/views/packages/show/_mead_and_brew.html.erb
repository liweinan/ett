<% if @package.task.use_mead_integration? && !@package.task.read_only_task? %>
    <% if @package.pkg_brew_rpm_link('el6') %>
        <tr>
            <td>Brew</td>
            <td><%= link_to @package.brew_in_errata('el6'), @package.pkg_brew_rpm_link('el6') %></td>
        </tr>
    <% else %>
        <tr>
            <td>Brew</td>
            <td><%= h @package.brew_in_errata('el6') %></td>
        </tr>
    <% end %>

    <% if @package.mead_link %>
        <tr>
            <td>Mead</td>
            <td><%= link_to @package.mead, @package.mead_link %></td>
        </tr>
    <% else %>
        <tr>
            <td>Mead</td>
            <td><%= h @package.mead %></td>
        </tr>
    <% end %>
<% end %>
