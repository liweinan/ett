<% if @package.task.use_mead_integration? && !@package.task.readonly? %>
    <% main_distro = @package.task.distros[0] %>
    <% if @package.pkg_brew_rpm_link(main_distro) %>
        <tr>
            <td>Brew</td>
            <td><%= link_to @package.brew_in_errata(main_distro), @package.pkg_brew_rpm_link(main_distro) %></td>
        </tr>
    <% else %>
        <tr>
            <td>Brew</td>
            <td><%= h @package.brew_in_errata(main_distro) %></td>
        </tr>
    <% end %>

    <% if @package.mead_link %>
        <tr>
            <td>Mead</td>
            <td><%= link_to @package.mead, @package.mead_link %></td>
        </tr>
    <% else %>
        <tr>
            <td>Mead</td>
            <td><%= h @package.mead %></td>
        </tr>
    <% end %>
<% end %>
