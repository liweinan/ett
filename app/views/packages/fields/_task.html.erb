<% if has_task? %>
    <%= f.hidden_field :task_id, :value => Task.find_by_name(unescape_url(params[:task_id])).id %>
<% else %>
    <tr>
      <td colspan>
        Tag
      </td>
      <td colspan style="text-align:left;">
        <%= f.collection_select :task_id, Task.all(:order => "name"), :id, :name %>
      </td>
    </tr>
<% end %>
