<%
   unless @user.blank?
       params[:user] = @user
   end
%>

<h2><%= h @package.name %></h2>

<%= render :partial => "layouts/error_messages" %>

<% form_for(@package) do |f| %>
    <%= f.error_messages %>
    <div class='manage-tbl'>
      <table>
        <%= render :partial => 'packages/fields/name', :locals => {:f => f} %>
        <%= render :partial => 'packages/fields/brew_tag', :locals => {:f => f} %>
        <%= render :partial => 'packages/fields/label', :locals => {:f => f} %>
        <%= render :partial => 'packages/fields/marks', :locals => {:f => f} %>
        <%= render :partial => 'packages/fields/assignee', :locals => {:f => f} %>
        <%= render :partial => 'packages/fields/track_time' %>

        <% get_xattrs(@package.brew_tag, false, true) do |attr| %>
            <%= render :partial => 'packages/fields/xattrs', :locals => {:f => f, :xattr => attr} %>
        <% end %>

        <%= render :partial => 'packages/fields/notes', :locals => {:f => f} %>

        <% if params[:user] %>
            <input type="hidden" id="user" name="user" value="<%= params[:user] %>"/>
        <% end %>
        <tr>
          <td colspan=2 style="text-align:left;">
            <%= render :partial => 'layouts/notification', :locals => {:title => 'Notify the changes to:', :div_id => 'package_edit'} %>
          </td>
        </tr>
        <tr>
          <td colspan=2 style="text-align:left;">
            <%= render :partial => 'layouts/notification_link', :locals => {:div_id => 'package_edit'} %>
            <%= f.submit 'Update' %>
          </td>
        </tr>
      </table>
    </div>
<% end %>

<%= render :partial => 'time_tracking_js' %>