<% tos = @package.to_relationships %>
<% froms = @package.from_relationships %>
<% if tos.size > 0 || froms.size > 0 %>
    <h3>Relationships</h3>
    <%= render :partial => 'layouts/line' %>
    This package is:
    <%= render :partial => 'layouts/sep' %>
<% end %>
<%
   if tos.size > 0
     tos.each do |to|
%>  <span style="<%= to.to_package.deleted_style %>">

        <%= to.relationship.to_name %> <%= link_to to.to_package.name,
                                                   :controller => :packages,
                                                   :action => :show,
                                                   :id => escape_url(to.to_package.name),
                                                   :task_id => escape_url(to.to_package.task.name) %>
  @<%= link_to (to.to_package.task.name),
               :controller => :packages,
               :action => :index,
               :task_id => escape_url(to.to_package.task.name) %>
  </span>
        <%= render :partial => 'layouts/sep' %>
    <%
       end
       end
    %>
<%
   if froms.size > 0
     froms.each do |from|
%>
        <span style="<%= from.from_package.deleted_style %>">
        <%= from.relationship.from_name %> <%= link_to from.from_package.name,
                                                       :controller => :packages,
                                                       :action => :show,
                                                       :id => escape_url(from.from_package.name),
                                                       :task_id => escape_url(from.from_package.task.name) %>
          @<%= link_to (from.from_package.task.name),
                       :controller => :packages,
                       :action => :index,
                       :task_id => escape_url(from.from_package.task.name) %>
          </span>
        <%= render :partial => 'layouts/sep' %>
    <%
       end
       end
    %>
