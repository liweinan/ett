<% unless package.blank? %>
    <%
       begin
         package.reload
       rescue
         # do nothing on ActiveRecord::RecordNotFound
       end
    %>
    <% package.upgrade_bz.each do |ub| %>
        <%= link_to ub.bz_id_and_is_in_errata, "#{APP_CONFIG['bugzilla_prefix']}#{ub.bz_id}", :target => '_blank' %>
    <% end %>
<% end %>
