<% disabled ||= nil %>
<% if field_name == 'Ver' && !package.can_edit_version?
     disabled = true
   end %>

<% tag_name = "package[#{field_name.underscore}]" %>
<% field_val = package[field_name.underscore] %>

<% if field_name == 'Bz' %>
    <% tag_name = 'flatten_bzs' %>
    <% field_val = package.bzs_flatten %>
<% end %>

<%= text_field_tag tag_name,
                   field_val,
                   :id => "pac_#{package.id}_#{field_name}_input",
                   :disabled => disabled %>